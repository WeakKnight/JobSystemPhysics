<scene>
  <description text="Particle should approach the finish line at y = 7.5 asymptotically. Intended to verify that the damping force works with different damping coefficients."/>

  <duration time="8.0"/>
  <integrator type="explicit-euler" dt="0.01"/>

  <particle m="1.0" px="2.0" py="7.0" vx="0.0" vy="1.0" fixed="0" radius="0.04"/>

  <particle m="1.0" px="1.0" py="7.5" vx="0.0" vy="0.0" fixed="1" radius="0.04"/>
  <particle m="1.0" px="3.0" py="7.5" vx="0.0" vy="0.0" fixed="1" radius="0.04"/>

  <edge i="1" j="2" radius="0.01"/>

  <dragdamping b="2.0"/>
</scene>
