<scene>
  <description text="Multiple springs with decreasing rest length. Intended to verify the behavior of the rest length parameter. Observe the stable oscillations with forward-backward Euler."/>

  <duration time="50.0"/>
  <integrator type="symplectic-euler" dt="0.01"/>
  <maxsimfreq max="500.0"/>

  <particle m="1.0" px="-0.6" py="0.0" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px=" 0.6" py="0.0" vx="0.0" vy="0.0" fixed="0"/>
  <edge i="0" j="1"/>
  <springforce edge="0" k="1.0" l0="1.0" />

  <particle m="1.0" px="-0.6" py="-0.2" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px=" 0.6" py="-0.2" vx="0.0" vy="0.0" fixed="0"/>
  <edge i="2" j="3"/>
  <springforce edge="1" k="1.0" l0="0.9" />

  <particle m="1.0" px="-0.6" py="-0.4" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px=" 0.6" py="-0.4" vx="0.0" vy="0.0" fixed="0"/>
  <edge i="4" j="5"/>
  <springforce edge="2" k="1.0" l0="0.8" />

  <particle m="1.0" px="-0.6" py="-0.6" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px=" 0.6" py="-0.6" vx="0.0" vy="0.0" fixed="0"/>
  <edge i="6" j="7"/>
  <springforce edge="3" k="1.0" l0="0.7" />

</scene>
